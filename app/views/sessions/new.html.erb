<div class="grid lg:grid-cols-2 lg:gap-x-12 min-h-screen">
  <section class="hidden lg:inline-block p-5 text-white" style="background-color: #021138;">
    <h2 class="text-3xl font-bold mt-16 pt-5"><%= link_to 'Coolab', root_path, data: { turbo: false }, class: "hover:text-gray-200" %></h2>
    <p class="text-lg">Cool project collaboration for your teams !</p>
  </section>
  <section class="py-4 px-2 flex flex-col items-center lg:inline-block">
    <p>
      Not yet a collaborator?
      <%= link_to 'Sign up now', signup_path, class: "underline hover:text-gray-300" %>
    </p>
    <h1 class="text-2xl fw-bold lg:mt-16">Sign up to <%= link_to 'Coolab', root_path, data: { turbo: false }, class: "underline font-bold hover:text-gray-200" %></h1>

    <%= form_with(url: login_path) do |form| %>
      <div class="mt-3">
        <%= form.label :email %>
        <%= form.email_field :email, class: "bg-gray-800 border-0 focus-none rounded w-full"  %>
      </div>

      <div class="mt-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
      </div>

      <div class="mt-3">
        <%= form.submit 'Sign in', class: "btn w-full", style: "background-color: hsl(240, 60%, 41%);" %>
      </div>
    <% end %>
  </section>
</div>