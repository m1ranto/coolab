<% @title = "Issues" %>

<%= render 'shared/links', object: @project %>

<div class="mt-3 card-darker title-container" id="todoslist">
  <div class="mb-2">
    <%= turbo_frame_tag "new_task" do %>
      <%= link_to 'New task', new_project_task_path(@project), class: "btn btn-green text-black" %>
    <% end %>
  </div>

  <h1 class="title">
    <%= "Issue".pluralize(@project.tasks.size) %>
  </h1>

  <div id="tasks">
    <% if @project.tasks.present? %>
      <%= render @project.tasks %>
    <% end %>
  </div>
</div>
