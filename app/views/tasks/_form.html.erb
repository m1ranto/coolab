<%= form_with(model: [@project, task]) do |form| %>
  <%= render 'shared/errors', object: task %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.hidden_field :project_id %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
