<div class="mt-3" id="<%= dom_id task %>">
  <h3 class="fs-5 fw-bold d-inline-block">
    <%= task.name %> - project<%= task.project_id %>
  </h3>
  <div class="ms-3 d-inline-flex gap-2">
    <%= link_to '', edit_task_path(task), class: "bi bi-pencil-square fs-6 btn p-0" %>
    <%= button_to '', task, class: "bi bi-trash fs-6 btn p-0", method: :delete %>
  </div>
</div>
