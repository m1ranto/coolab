<p style="color: green"><%= notice %></p>

<h1 class="text-center mb-0"><%= @project.name %></h1>
<p class="text-center fs-5"><%= @project.description %></p>
<div class="text-center">
  <%= profile_picture @project.collaborator %>
</div>

<%= turbo_frame_tag "new_task" do %>
  <%= link_to 'New task', new_project_task_path(@project), class: "btn btn-success text-black" %>
<% end %>

<div class="mt-3 card-darker title-container">
  <%= turbo_stream_from "comment" %>
  <h2 class="fs-3 title">
    <%= link_to "Campfire", project_comments_path(@project), class: "py-2" %>
  </h2>
  <% if @project.comments.any? %>
    <% @project.comments.last(3).each do |comment| %>
      <div id="<%= dom_id comment %>">
        <h3 class="fs-5">
          <%= profile_picture_small comment.collaborator %>
          <%= link_to comment.content, project_comments_path(comment.project), class: "fs-6 px-2 py-1 bg-dark rounded" %>
        </h3>
      </div>
    <% end %>
  <% else %>
    <%= link_to "Add a comment", project_comments_path(@project), class: "btn btn-dark btn-sm" %>
  <% end %>
</div>

<% if @project.tasks.any? %>
  <div class="mt-3 card-darker title-container" id="todoslist">
    <h2 class="fs-3 title">
      <%= "Todo".pluralize(@project.tasks.size) %>
    </h2>

    <div id="tasks">
      <%= render @project.tasks.reverse %>
    </div>
  </div>
<% end %>