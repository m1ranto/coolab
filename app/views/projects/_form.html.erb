<%= form_with(model: project) do |form| %>
  <%= render 'shared/errors', object: project %>

  <%= form.text_field :name, placeholder: "Name this project", autofocus: true, class: "form-control ps-0 mb-0 bg-transparent border-0 focus-none" %>

  <div class="mt-3 hstack gap-1">
    <%= form.label :description, "Notes", class: "form-label mb-0" %>
    <%= form.text_area :description, placeholder: "Add description", class: "form-control mb-0 bg-transparent border-0 focus-none", style: "height: 38px" %>
  </div>

  <div class="mt-4">
    <%= form.submit class: "btn btn-success" %>
    <%= link_to "Close", projects_path, class: "btn btn-dark" %>
  </div>
<% end %>
