<%= form_with(model: project) do |form| %>
  <%= render 'shared/errors', object: project %>

  <%= form.text_field :name, placeholder: "Name this project", autofocus: true, class: "w-full ps-0 bg-transparent border-0 focus-none" %>

  <div class="mt-3 flex items-center gap-1">
    <%= form.label :description, "Notes" %>
    <%= form.text_area :description, placeholder: "Add description", class: "w-full bg-transparent border-0 focus-none", style: "height: 40px" %>
  </div>

  <div class="mt-4">
    <%= form.submit class: "btn btn-green" %>
    <%= link_to "Close", projects_path, class: "btn btn-dark" %>
  </div>
<% end %>
