<%= form_with(model: project) do |form| %>
  <%= render 'shared/errors', object: project %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "btn btn-success mt-2" %>
  </div>
<% end %>
