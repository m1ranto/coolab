<%= form_with(model: organization) do |form| %>
  <% if organization.errors.any? %>
    <div style="color: red">
      <ul class="list-unstyled">
        <% organization.errors.each do |error| %>
          <li class="bg-danger-subtle px-1 my-1 rounded"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-2">
    <%= form.submit class: "btn btn-success mt-2" %>
  </div>
<% end %>
