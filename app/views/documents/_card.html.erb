<%= link_to project_documents_path(project), class: "col-12 col-md-6 overflow-hidden" do %>
  <div class="mt-3 card-darker card-height title-container">
    <h2 class="fs-3 title">Documents</h2>
    <% if project.documents.blank? %>
      <%= button_tag "Add a document", class: "btn btn-dark btn-sm" %>
    <% else %>
      <div class="d-flex flex-wrap mx-1 justify-content-between column-gap-2 row-gap-3">
        <% project.documents.each do |document| %>
          <div class="document-card document-card-sm" id="<%= dom_id document %>">
            <h3 class="fs-6 mb-2 text-center"><i class="bi bi-folder-fill text-blue me-1"></i><%= document.name %></h3>
            <% document.files.each do |file| %>
              <% if file.representable? %>
                <div class="text-center">
                  <%= image_tag file.representation(resize_to_limit: [90, 100]), class: "rounded-1" %>
                </div>
              <% else %>
                <div class="text-center">
                  <i class="bi bi-file-earmark-text display-2"></i>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>