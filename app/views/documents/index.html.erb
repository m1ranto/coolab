<%= render 'shared/links', object: @project %>

<div>
  <%= link_to 'New document', new_project_document_path(@project), class: "btn btn-success text-black" %>
</div>

<div class="mt-3 card-darker title-container">
  <h1 class="fs-3 title">Documents</h1>
  <% if @project.documents.any? %>
    <div class="mt-2 d-flex flex-wrap gap-3 justify-content-evenly">
      <%= render @project.documents %>
    </div>
  <% else %>
    <div><%= @project.name %> documents will show here !</div>
  <% end %>
</div>
