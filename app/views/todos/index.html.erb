<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<div id="todos">
  <% @todos.each do |todo| %>
    <div class="d-flex flex-wrap align-items-baseline" id="<%= dom_id todo %>">
      <h3 class="fs-4">
        <%= link_to todo.name, todo, class: "link-dark text-decoration-none" %>
      </h3>
      <% unless todo.description.empty? %>
        <%= link_to "", todo, class: "bi bi-justify-left link-dark mx-1" %>
      <% end %>
      <% unless todo.due_on.nil? %>
        <%= link_to "", todo, class: "bi bi-calendar-event link-dark mx-1" %>
        <p><%= todo.due_on.strftime("%a, %b %d") %></p>
    <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path, class: "btn btn-success" %>
