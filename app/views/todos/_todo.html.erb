<div class="d-flex flex-wrap align-items-baseline" id="<%= dom_id todo %>">
  <h3 class="fs-5">
    <%= link_to todo.name, [todo.task.project, todo.task, todo], class: "link-dark text-decoration-none" %>
  </h3>
  <% unless todo.description.empty? %>
    <%= link_to "", [todo.task.project, todo.task, todo], class: "bi bi-justify-left link-dark mx-1" %>
  <% end %>
  <% unless todo.due_on.nil? %>
    <%= link_to "", [todo.task.project, todo.task, todo], class: "bi bi-calendar-event link-dark mx-1" %>
    <p><%= todo.due_on.strftime("%a, %b %d") %></p>
  <% end %>
</div>
