<%= form_with(model: [todo.task.project, todo.task, todo]) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.label :collaborator, class: "form-label" %>
    <%= form.collection_select :collaborator, Collaborator.all, :id, :name, { include_blank: true }, { multiple: true, class: "form-select text-bg-dark border-0" } %>
  </div>

  <div class="mt-3">
    <%= form.label :due_on, class: "form-label" %>
    <%= form.date_field :due_on, class: "form-control text-bg-dark border-0" %>
  </div>

  <div class="mt-3">
    <%= form.check_box :done, class: "form-check-input" %>
    <%= form.label :done, class: "form-check-label" %>
  </div>

  <div class="mt-3">
    <%= form.hidden_field :task_id %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
