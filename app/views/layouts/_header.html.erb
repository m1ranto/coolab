<header class="mb-2 bg-default fixed-top">
  <nav class="navbar border-bottom border-dark py-0">
    <div class="container-fluid">
      <%= link_to "Coolab", root_path, class: "navbar-brand text-white mb-0 pb-0", aria_current: "page" %>
      <ul class="me-sm-4 list-unstyled hstack gap-3 gap-sm-4 mb-0 pb-0">
        <li>
          <%= link_to projects_path, class: "py-sm-2 nav-link link-light" do %>
            <div class="text-center text-sm-start">
              <i class="bi bi-house-door-fill"></i>
              <span class="d-none d-sm-inline">Home</span>
            </div>
            <div class="small d-sm-none" style="margin-top: -3px">Home</div>
          <% end %>
        </li>
        <li>
          <%= link_to activity_path, class: "py-sm-2 nav-link link-light" do %>
            <div class="text-center text-sm-start">
              <i class="bi bi-circle-half"></i>
              <span class="d-none d-sm-inline">Activity</span>
            </div>
            <div class="small d-sm-none" style="margin-top: -3px">Activity</div>
          <% end %>
        </li>
        <li>
          <%= link_to collaborators_path, class: "py-sm-2 nav-link link-light" do %>
            <div class="text-center text-sm-start">
              <i class="bi bi-people-fill"></i>
              <span class="d-none d-sm-inline">Team</span>
            </div>
            <div class="small d-sm-none" style="margin-top: -3px">Team</div>
          <% end %>
        </li>
      </ul>
      <ul class="mb-0 pb-0 list-unstyled hstack align-items-baseline">
        <li class="dropdown text-white">
          <a class="py-1 nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= profile_picture current_collaborator %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" data-bs-theme="dark">
            <li><%= link_to 'Profile', current_collaborator, class: "dropdown-item" %></li>
            <li><%= link_to 'Settings', edit_collaborator_path(current_collaborator), class: "dropdown-item" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to 'Log out', logout_path, data: { "turbo-method": :delete }, class: "dropdown-item" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
