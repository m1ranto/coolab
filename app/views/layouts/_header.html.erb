<header class="border-b border-gray-800">
  <nav class="p-1 sm:px-3">
    <div class="flex flex-wrap justify-between items-center">
      <%= link_to root_path, class: "text-3xl sm:hidden", aria_current: "page" do %>
        <svg class="w-10 h-10" width="390" height="360" viewBox="0 0 390 360" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M179.969 60C113.709 60.0167 60 113.736 60 180C60 246.264 113.709 299.983 179.969 300C179.979 300 179.99 300 180 300H239.993L210.73 240H180C146.863 240 120 213.137 120 180C120 146.863 146.863 120 180 120H210.73L239.993 60H179.969Z" fill="white"/>
          <path d="M269.984 300L226.088 210H286.102L329.998 300H269.984Z" fill="white"/>
        </svg>
      <% end %>
      <%= link_to root_path, class: "text-xl hidden sm:flex sm:items-center max-h-8", aria_current: "page" do %>
        <svg class="w-10 h-10" width="390" height="360" viewBox="0 0 390 360" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M179.969 60C113.709 60.0167 60 113.736 60 180C60 246.264 113.709 299.983 179.969 300C179.979 300 179.99 300 180 300H239.993L210.73 240H180C146.863 240 120 213.137 120 180C120 146.863 146.863 120 180 120H210.73L239.993 60H179.969Z" fill="white"/>
          <path  d="M269.984 300L226.088 210H286.102L329.998 300H269.984Z" fill="white"/>
        </svg>
        <span>Coolab</span>
      <% end %>

      <ul class="flex gap-3 sm:gap-7 sm:me-16">
        <li>
          <%= link_to projects_path, class: "sm:py-1 inline-block" do %>
            <div class="text-center">
              <i class="bi bi-house-door-fill"></i>
              <span class="hidden sm:inline">Home</span>
            </div>
            <div class="text-xs sm:hidden -mt-1">Home</div>
          <% end %>
        </li>
        <li>
          <%= link_to activity_path, class: "sm:py-1 inline-block" do %>
            <div class="text-center">
              <i class="bi bi-circle-half"></i>
              <span class="hidden sm:inline">Activity</span>
            </div>
            <div class="text-xs sm:hidden -mt-1">Activity</div>
          <% end %>
        </li>
        <li>
          <%= link_to collaborators_path, class: "sm:py-1 inline-block" do %>
            <div class="text-center">
              <i class="bi bi-people-fill"></i>
              <span class="hidden sm:inline">Team</span>
            </div>
            <div class="text-xs sm:hidden -mt-1">Team</div>
          <% end %>
        </li>
      </ul>
      <ul class="relative" data-controller="dropdown">
        <li>
          <a class="py-1 nav-link dropdown-toggle" role="button" data-action="dropdown#toggle" aria-expanded="false">
            <%= profile_picture current_collaborator %>
          </a>
        </li>
        <li class="hidden z-10 absolute top-11 right-0 bg-gray-800 py-3 px-5 rounded" data-dropdown-target="menu">
          <ul>
            <li><%= link_to 'Profile', current_collaborator, class: "hover:text-gray-400" %></li>
            <li><%= link_to 'Settings', edit_collaborator_path(current_collaborator), class: "hover:text-gray-400" %></li>
            <li><hr class="my-1 border-gray-700"></li>
            <li><%= link_to 'Log out', logout_path, data: { "turbo-method": :delete }, class: "hover:text-gray-400" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
