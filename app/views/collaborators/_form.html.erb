  <%= form_with(model: collaborator, class: "w-max-form") do |form| %>
  <% if collaborator.errors.any? %>
    <div style="color: red">
      <ul class="list-unstyled">
        <% collaborator.errors.each do |error| %>
          <li class="bg-danger-subtle px-1 my-1 rounded"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div class="mt-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control"  %>
  </div>

  <div class="mt-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control"  %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "btn text-white w-100", style: "background-color: hsl(240, 60%, 41%);" %>
  </div>
<% end %>
