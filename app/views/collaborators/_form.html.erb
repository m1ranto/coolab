<%= form_with(model: collaborator, class: "w-max-md") do |form| %>
  <%= render 'shared/errors', object: collaborator %>

  <div class="mt-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
  </div>

  <% unless collaborator.new_record? %>
    <div class="mt-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
    </div>
  <% end %>

  <% if @organization.present? %>
    <div class="mt-3">
      <%= form.hidden_field :organization_id, value: @organization.id, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
    </div>
  <% elsif collaborator.new_record? %>
    <div class="mt-3">
      <%= form.label :organization_name %>
      <%= form.text_field :organization_name, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
  </div>

  <div class="mt-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
  </div>

  <% unless collaborator.new_record? %>
    <div class="mt-3">
      <%= form.label :profile_picture %>
      <%= form.file_field :profile_picture, class: "bg-gray-800 border-0 focus-none rounded w-full" %>
    </div>
  <% end %>

  <div class="mt-3">
    <% if collaborator.new_record? %>
      <%= form.submit class: "btn text-white w-full", style: "background-color: hsl(240, 60%, 41%);" %>
    <% else %>
      <%= form.submit class: "btn text-white", style: "background-color: hsl(240, 60%, 41%);" %>
      <%= link_to "Close", collaborator_path(collaborator), class: "btn btn-dark" %>
    <% end %>
  </div>
<% end %>
